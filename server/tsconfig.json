{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true, // Console改成TS的位置
    "removeComments": true, // 輸出移除comment
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // 避免大小寫被改動
    "strict": false,
    "noImplicitAny": true, // 檢出any
    "strictPropertyInitialization": false /* Check for class properties that are declared but not set in the constructor. */
  },
  "include": ["./src/**/*"],
  "exclude": ["./build", "./node_modules"]
}
