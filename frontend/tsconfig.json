{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "include": ["./src/**/*", "src/custom.d.ts"],
  "exclude": ["./node_modules"]
}
